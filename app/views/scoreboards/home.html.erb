<div class='container-fluid' style='max-width: 1280px;'>
  <div class='row'>
    <%= image_tag('ESPNheader.png', style: 'width: 100%')%>
  </div>

  
  <div class='row' style='text-align: center; background-color: #ededf0;'>
    <div class='mainscoreboard' style='width: 75.5%'>
        <div class='col-sm-4' style='border: solid 1px'>
          <p>Around the league with</p>
        </div>
        <%@scoreboard.games.each_with_index do |game, i|%>
          <%if i == 0 || i % 4 ==0%>
            <div class='col-sm-2' style='border: solid 1px'>
          <%end%>
              <%=game['id']%><br>
          <%if [3,7,11,15].include?(i)%>
            </div>
          <%end%>
        <%end%>
    </div>
  </div>

  <div class='row'>
    <%= image_tag('ESPNbottom.png', style: 'width: 100%')%>
  </div>

</div>

